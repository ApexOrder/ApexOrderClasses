<!-- =========================================================
     BLOODLINES — VANGUARD PHASE 1 (COMPLETE ITEMS FILE) — UPDATED v2
     Changes applied:
       ✅ ALL CustomIcon values set to "ApexOrder"
       ✅ All custom item names affixed with "bloodlines"
       ✅ ALL items explicitly set DescriptionKey -> <itemName>Desc
       ✅ ALL items forced EconomicValue=0 and SellableToTrader=false
     ========================================================= -->

<configs>
  <append xpath="/items">

    <!-- =========================
         Welcome Note (story)
         ========================= -->
    <item name="bloodlinesWelcomeNote">
      <property name="Extends" value="blankNoteMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="ApexOrder"/>
	  <property name="Stacknumber" value="1"/>

      <property name="DescriptionKey" value="bloodlinesWelcomeNoteDesc"/>
      <property name="EconomicValue" value="0"/>
      <property name="SellableToTrader" value="false"/>

      <property name="NoScrapping" value="true"/>
      <property name="SoundPickup" value="map_grab"/>
      <property name="SoundPlace" value="map_place"/>

      <property class="Action0">
        <property name="Class" value="Eat"/>
        <property name="Delay" value="0.3"/>
        <property name="Sound_start" value="read_mod"/>
        <property name="Sound_in_head" value="true"/>
        <property name="PromptTitle" value="bloodlinesWelcomeNote"/>
        <property name="PromptDescription" value="bloodlinesWelcomeNoteDesc"/>
      </property>
    </item>

    <!-- =========================
         Bloodlines Class Book (spawns 5 class notes)
         ========================= -->
    <item name="bloodlinesClassBook">
      <property name="Extends" value="schematicMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="ApexOrder"/>
      <property name="Tags" value="book,bloodlines"/>
      <property name="Group" value="Misc"/>
      <property name="Stacknumber" value="1"/>

      <property name="DescriptionKey" value="bloodlinesClassBookDesc"/>
      <property name="EconomicValue" value="0"/>
      <property name="SellableToTrader" value="false"/>

      <property name="NoScrapping" value="true"/>

      <property class="Action0">
        <property name="Class" value="OpenBundle"/>
        <property name="Delay" value="0"/>
        <property name="Sound_start" value="close_garbage"/>
        <property name="Create_item" value="bloodlinesVanguardNote,bloodlinesWardenNote,bloodlinesMachinistNote,bloodlinesScoutNote,bloodlinesPredatorNote"/>
        <property name="Create_item_count" value="1,1,1,1,1"/>
      </property>
    </item>

    <!-- =========================
         Vanguard Helix (resource)
         ========================= -->
    <item name="bloodlinesVanguardHelix">
      <property name="Extends" value="resourceScrapPolymers"/>
      <property name="CreativeMode" value="Player"/>
      <property name="Tags" value="resource,component,bloodlines,vanguard"/>
      <property name="CustomIcon" value="ApexOrder"/>
      <property name="Group" value="Resources"/>
      <property name="Stacknumber" value="500"/>

      <property name="DescriptionKey" value="bloodlinesVanguardHelixDesc"/>
      <property name="EconomicValue" value="0"/>
      <property name="SellableToTrader" value="false"/>
    </item>

    <!-- =========================
         Vanguard Note (read popup)
         ========================= -->
    <item name="bloodlinesVanguardNote">
      <property name="Extends" value="blankNoteMaster"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="ApexOrder"/>
	  <property name="Stacknumber" value="1"/>

      <property name="DescriptionKey" value="bloodlinesVanguardNoteDesc"/>
