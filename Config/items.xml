      <property class="Action0">
        <property name="Class" value="Eat"/>
        <property name="Delay" value="0.3"/>
        <property name="Sound_start" value="read_mod"/>
        <property name="Sound_in_head" value="true"/>
        <property name="PromptTitle" value="bloodlinesVanguardNote"/>
        <property name="PromptDescription" value="bloodlinesVanguardNoteDesc"/>
      </property>
    </item>

    <!-- =========================
         Vanguard Injector (popup on use)
         ========================= -->
    <item name="bloodlinesVanguardInjector">
      <property name="Extends" value="drugSteroids"/>
      <property name="CreativeMode" value="Player"/>
      <property name="CustomIcon" value="ApexOrder"/>
      <property name="Tags" value="medical,consumable,bloodlines,vanguard"/>
      <property name="Group" value="Medical"/>
      <property name="Stacknumber" value="1"/>

      <property name="DescriptionKey" value="bloodlinesVanguardInjectorDesc"/>
      <property name="EconomicValue" value="0"/>
      <property name="SellableToTrader" value="false"/>

      <property name="NoScrapping" value="true"/>

      <property class="Action0">
        <property name="Class" value="Eat"/>
        <property name="Delay" value="1.0"/>
        <property name="Sound_start" value="player_drink"/>
        <property name="Sound_in_head" value="true"/>
        <property name="PromptTitle" value="bloodlinesVanguardInjector"/>
        <property name="PromptDescription" value="bloodlinesVanguardInjectorDesc"/>
      </property>

      <!-- LOCK + APPLY -->
  <effect_group tiered="false">

    <!-- If no class chosen (bloodlinesClass == 0), set Vanguard and add buff -->
    <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" target="self" cvar="bloodlinesClass" operation="set" value="1">
      <requirement name="CVarCompare" target="self" cvar="bloodlinesClass" operation="Equals" value="0"/>
    </triggered_effect>

    <triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" target="self" buff="buffBloodlinesVanguard">
      <requirement name="CVarCompare" target="self" cvar="bloodlinesClass" operation="Equals" value="0"/>
    </triggered_effect>

    <!-- If a class is already chosen (bloodlinesClass != 0), show message and do nothing else -->
    <triggered_effect trigger="onSelfPrimaryActionEnd" action="ShowToolbeltMessage" target="self" message_key="bloodlinesInjectorAlreadyChosenMsg">
      <requirement name="!CVarCompare" target="self" cvar="bloodlinesClass" operation="Equals" value="0"/>
    </triggered_effect>

  </effect_group>
    </item>

    <!-- =========================
