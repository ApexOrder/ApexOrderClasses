        <property name="Create_item" value="bloodlinesVanguardHelix,bloodlinesVanguardNote,bloodlinesVanguardInjector,bloodlinesClassBook,bloodlinesWelcomeNote"/>
        <property name="Create_item_count" value="20,1,1,1,1"/>
      </property>
    </item>

